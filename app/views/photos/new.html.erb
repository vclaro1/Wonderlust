<h3>Upload you're photo file in here:</h3
<%= form_for [@location, @photo], html: { multipart: true } do |f| %>
	<%= f.label :image %><br>
	<%= f.file_field :image, class: 'form-control'%>	
	<%= f.label :description%>
	<%= f.text_field :description, size: 200%>
	<%= f.hidden_field :date, :value=> Time.now%>
	<%= f.submit "Upload"%>
<%end%>