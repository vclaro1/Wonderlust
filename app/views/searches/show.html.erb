<h1>Search#show</h1>
<p>Find me in app/views/search/show.html.erb</p>
<h1>Search Results</h1>
<script type="text/javascript">
	console.log(<%@search.tipo%>)
</script>
<%if @search.tipo == "loc"%>
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Country</th>
				<th>Interests</th>
			</tr>
		</thead>
		<tbody>
			<% if @search.search_locations_address.nil? %>
				<p> No Locations Found!</p>
			<%else %>
				<% @search.search_locations_address.each do |location| %>
			      <tr>
			        <td><%= location.address %></td>
			        <td><%= location.country %></td>
			        <td>
			        <%location.interests.each do |int|%>
			        	<%= int.name %>
			        <%end%></td>
			        <td><%= link_to 'Show', [location.trip, location] %></td>
			      </tr>
				<% end %>
